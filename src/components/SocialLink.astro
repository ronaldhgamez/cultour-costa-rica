---
interface Props {
    title: string;
    width: string;
    height: string;
    alt: string;
    src: string;
    href: string;
}
const { title, width, height, alt, src, href } = Astro.props;
---


<address>
    <a class="link" href={href} target="_blank">
        <img src={src} alt={alt} width={width} height={height} />
        {title}
    </a>
</address>

  

<style>
    address {
        /* border: 3px solid var(--text-color); */
        /* background: linear-gradient(to left, rgba(0, 0, 0, 0.183), rgba(0, 41, 0, 0.441)); */
        padding: 5px 20px;
        border-radius: 5px;
        transition: 0.5s ease;
    }

    address:hover {
        background: linear-gradient(to left, rgba(78, 101, 71, 0.317), rgba(4, 37, 4, 0.617));
    }

    .link {
        display: flex;
        gap: 12px;
        align-items: center;
        text-decoration: none;
        color: var(--text-color);
        font-style: normal;
        font-weight: bold;
        font-size: 1.0em;
    }
    
    @media screen and (max-width: 768px) {
        address {
            padding: 0px 10px;
        }
        .link {
            flex-direction: column;
            gap: 0;
            font-size: 0.8em;
            font-size: 0;
        }

        .link img {
            width: 35px;
            height: 35px;
        }
    }
</style>
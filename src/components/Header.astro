<script>
    window.addEventListener("scroll", () => {
        let logo = document.getElementById("cultour-logo")!;
        let header = document.getElementById("cultour-header")!;
        /* let miDiv = document.getElementById("cultour-nav")!;
        miDiv.hidden = true; */
        if (
            document.body.scrollTop > 20 ||
            document.documentElement.scrollTop > 20
        ) {
            // Adjust the smaller size as needed
            logo.style.width = "95px";
            header.classList.add("blur-header");
        } else {
            // Initial logo size when not scrolled
            logo.style.width = "175px";
            header.classList.remove("blur-header");
        }
    });

    document.addEventListener("click", function() {
        let miDiv = document.getElementById("cultour-nav")!;
        miDiv.hidden = (miDiv.hidden) ? false : true;
    });
</script>


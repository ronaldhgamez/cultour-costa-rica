---
interface Props {
    title: string;
    width: string;
    height: string;
    alt: string;
    src: string;
    href: string;
}
const { title, width, height, alt, src, href } = Astro.props;
---

<address>
    <a class="link" href={href} target="_blank">
        <img src={src} alt={alt} width={width} height={height} />
        {title}
    </a>
</address>

  

<style>

    .link {
        display: flex;
        gap: 12px;
        align-items: center;
        text-decoration: none;
        color: rgb(193, 191, 191);
        font-style: normal;
        font-weight: bold;
        font-size: 1.0em;
        transition: color 0.2s ease;
    }

    .link > img { 
        transition: 0.2s ease;
    }
    
    .link:hover {
        color: rgb(255, 255, 255);
    }
    
    .link:hover > img {
        transform: scale(1.3);
    }

    @media screen and (max-width: 820px) {

        .link {
            font-size: 0.9em;
            gap: 10px;
        }
    }
</style>